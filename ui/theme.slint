import { Store } from "./store.slint";
import "./fonts/monospace.ttf";
import "./fonts/FiraCode-Regular.ttf";
import "./fonts/SourceHanSerifCN.ttf";

export global Theme  {
    out property<length> padding: 4px;
    out property<length> spacing: 4px;
    out property<length> header-height: 35px;
    out property<length> footer-height: 35px;
    out property<length> balance-height: 100px;
    out property<length> border-radius: 4px;
    out property<length> scroll-width: 12px;
    out property<length> dialog-max-width: 600px;

    in-out property<length> default-width: Store.setting-dialog-config.ui.win-width.to-float() * 1px;
    in-out property<length> default-height: Store.setting-dialog-config.ui.win-height.to-float() * 1px;
    in-out property<length> default-font-size: Store.setting-dialog-config.ui.font-size.to-float() * 1px;
    in-out property<length> enlarge-font-size: default-font-size + 1px;
