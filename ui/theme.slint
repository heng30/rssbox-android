    in-out property<length> title3-font-size: default-font-size + 4px;
    in-out property<length> title2-font-size: default-font-size + 6px;
    in-out property<length> title1-font-size: default-font-size + 8px;

    in-out property<string> default-font-family: Store.setting-dialog-config.ui.font-family;
    in-out property<string> code-font-family: "FiraCode";

    out property<length> icon-size: 24px;
    out property<length> avatar-size: 32px;
    out property<length> default-label-width: 150px;
    out property<duration> default-animate-duration: 200ms;

    out property<color> brand-color: #409EFF;
